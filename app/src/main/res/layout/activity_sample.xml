<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/myFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/top_area"
                    android:layout_width="match_parent"
                    android:layout_height="135px"
                    android:background="#E8E8E8">

                    <ImageView
                        android:id="@+id/menu"
                        android:layout_width="25px"
                        android:layout_height="17px"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15px"
                        android:layout_marginTop="36px"
                        android:src="@drawable/menu" />

                    <ImageView
                        android:id="@+id/jianli"
                        android:layout_width="106px"
                        android:layout_height="80px"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="19px"
                        android:src="@drawable/jianli" />

                    <ImageView
                        android:id="@+id/chakan"
                        android:layout_width="25px"
                        android:layout_height="20px"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15px"
                        android:layout_marginTop="36px"
                        android:src="@drawable/chakanfile" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/listviewlinearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="105px"
                    android:background="@drawable/rectangle418copy3"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/listview_framelayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20px"
                        >

                        <ListView
                            android:layout_marginTop="1.5px"
                            android:id="@+id/mylistview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="#F3F3F3"
                            android:dividerHeight="2px"
                            android:scrollbars="none"></ListView>

                        <RelativeLayout
                            android:id="@+id/listview_area"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:id="@+id/show_move_detail"
                                android:layout_width="match_parent"
                                android:layout_height="48px"
                                android:layout_alignParentBottom="true"
                                android:background="#CE000000"
                                android:visibility="gone"
                                >

                                <TextView
                                    android:id="@+id/chose_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10px"
                                    android:layout_marginTop="14px"
                                    android:text="已选18张 "
                                    android:textColor="@color/white"
                                    android:textSize="20px" />

                                <ImageView
                                    android:id="@+id/xian"
                                    android:layout_width="wrap_content"
                                    android:layout_height="15px"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="6px"
                                    android:layout_marginTop="18px"
                                    android:layout_toRightOf="@+id/chose_text"
                                    android:src="@drawable/linecopy20" />

                                <TextView
                                    android:id="@+id/quit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="6px"
                                    android:layout_marginTop="14px"
                                    android:layout_toRightOf="@+id/xian"
                                    android:text="取消"
                                    android:textColor="@color/white"
                                    android:textSize="20px" />

                                <TextView
                                    android:id="@+id/delete"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="31px"
                                    android:layout_marginTop="14px"
                                    android:text="刪除"
                                    android:textColor="@color/red"
                                    android:textSize="20px" />

                                <ImageView
                                    android:id="@+id/diandian"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="12px"
                                    android:layout_width="3px"
                                    android:layout_height="15px"
                                    android:background="@drawable/diandian"
                                    />
                            </RelativeLayout>
                        </RelativeLayout>
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>


    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/navdrawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:drawSelectorOnTop="false"></ListView>

</android.support.v4.widget.DrawerLayout>

